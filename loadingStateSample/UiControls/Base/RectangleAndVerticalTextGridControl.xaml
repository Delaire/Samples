<UserControl
    x:Class="loadingStateSample.UiControls.Base.RectangleAndVerticalTextGridControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:loadingStateSample.UiControls"
    xmlns:local2="using:loadingStateSample.UiControls.Base"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="15" />
            <RowDefinition Height="20" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>

        <local:RectangleControl
            Grid.Row="0"
            Width="290"
            Margin="0"
            HorizontalAlignment="Left" />

        <local:RectangleControl
            Grid.Row="1"
            Width="60"
            Margin="0,5,0,0"
            HorizontalAlignment="Left" />

        <local:RectangleControl
            Grid.Row="2"
            Width="210"
            Margin="0,9,0,0"
            HorizontalAlignment="Left" />
        <local:RectangleControl
            Grid.Row="3"
            Width="170"
            Margin="0,5,0,0"
            HorizontalAlignment="Left" />
    </Grid>
</UserControl>
