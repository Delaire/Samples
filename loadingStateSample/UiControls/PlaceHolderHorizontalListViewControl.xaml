<UserControl
    x:Class="loadingStateSample.UiControls.PlaceHolderHorizontalListViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local1="using:loadingStateSample.UiControls"
    xmlns:local11="using:loadingStateSample.UiControls.Base"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <local1:RectangleControl
                Width="128"
                Height="25"
                Margin="0,0,0,5"
                HorizontalAlignment="Left" />

            <local1:RectangleControl
                Width="138"
                Height="13"
                Margin="20,0,0,5"
                HorizontalAlignment="Left" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <local11:RectangleAndVerticalTextGridControl Margin="10" />
            <local11:RectangleAndVerticalTextGridControl Margin="10" />
            <local11:RectangleAndVerticalTextGridControl Margin="10" />
            <local11:RectangleAndVerticalTextGridControl Margin="10" />
        </StackPanel>


    </StackPanel>
</UserControl>
